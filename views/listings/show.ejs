<% layout("/layouts/boilerplate") %>
<body>
    
    
    <div class="row mt-3">
        <div class="col-8 offset-2">

        

    <div class="card col-6 offset-3 show-card listings-card">
        <h3><%=listing.title%></h3>
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="Property_image" >
        <div class="card-body">
            <p class="card-text">
                Owned by <i><%= listing.owner.username  %></i>
                <br>
                <br>
                <%=listing.description%><br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
                <%=listing.location%><br>
                <%=listing.country%><br>

            </p>
        </div>

    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class=" btns offset-3 col-4">
        <a href="http://localhost:8080/listings/<%=listing._id%>/edit"><button class="btn btn-dark offset-1 add-btn">Edit</button></a>
        <form method="POST"  action="http://localhost:8080/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark  offset-5">Delete</button>
        </form>
    </div>
    <% } %>

    </div>

       
    <div class="col-8 offset-3 mb-3">
         <hr>
         <% if(currUser) { %>
        <h4>Leave a Review</h4>
        <form method="post" , action="/listings/<%=listing._id%>/review" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label class="form-label d-block">Rating</label>
                <div class="star-rating">
                    <% for (let i = 5; i >= 1; i--) { %>
                    <input type="radio" id="star-<%= i %>" name="review[rating]" value="<%= i %>">
                    <label for="star-<%= i %>">&#9733;</label>
                    <% } %>
                </div>
                </div>
            <div class="mb-3 mt-3">
               <label for="comment" class="form-label" >Comments</label>
               <textarea  id="comment" name="review[comment]" cols="30" , rows="5" class="form-control" required></textarea>
               <div class="invalid-feedback">
                    Enter some Comments for review
                </div>
            </div>
            <br> 
            <button class="btn btn-outline-dark">Submit</button>
        </form>
          <hr>
        <% } %>
  
    <h4>All Reviews</h4>
    <div class="row">
        <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-2 mb-3">
            <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <h6 class="card-text"><%=review.comment%></h6>
                <div class="card-text"><%= review.rating %> ‚≠ê</div>

                
                <div class="d-flex justify-content-end">
                    <form class="mb-3 mt-2" method="post" action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            </div>
            </div>

            
            
            
        <% } %>
    </div>

    </div>






    </div>

    


    
</body>
